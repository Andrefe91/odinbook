<%= link_to "[Home]", posts_path %>

<div>
    <h3>
        <%= @post.title %>
    </h3>

    <h4>
        <%= @post.body %>
    </h4>
</div>


<div>
    <p>Author: <%= @post.user.email.split("@")[0].capitalize %></p>
</div>

<div>
    <%= render partial: "controls", locals: {post: @post} %>
</div>

<div>
    <h5>
        Comments:
    </h5>

    <% if  @post.comments.size == 0 %>
        <p>So much empty, write a comment</p>
    <% else %>
        <% @post.comments.each do |comment| %>
            <div>
                <p>
                    <%= "#{comment.user.email.split("@")[0].capitalize}:" %>
                </p>
                
                <p>
                    <%= comment.body %>
                    <%= button_to "[X]", post_comment_path(@post, comment), method: :delete %>
                </p>
            </div>
        <% end %>
    <% end %>
</div>

<div>
    <%= render "comments_form" %>
</div>
